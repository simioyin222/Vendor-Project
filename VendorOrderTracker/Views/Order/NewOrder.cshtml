@{
  Layout = "_Layout";
}

<h2>Add a New Order for @Model.Name</h2>

<form action="/vendors/@Model.Id/orders" method="post">
  <input type="hidden" name="vendorId" value="@Model.Id">

  <label for="orderTitle">Title</label>
  <input id="orderTitle" name="orderTitle" type="text">

  <label for="orderDescription">Description</label>
  <input id="orderDescription" name="orderDescription" type="text">

  <label for="orderPrice">Price</label>
  <input id="orderPrice" name="orderPrice" type="number">

  <label for="orderDate">Date</label>
  <input id="orderDate" name="orderDate" type="date">

  <button type="submit">Add Order</button>
</form>