@model VendorOrderTracker.Models.Vendor
@{
    Layout = "_Layout";
}

<h2>@Model.Name</h2>
<p>Description: @Model.Description</p>

<h3>Orders</h3>
<ul>
@foreach (var order in Model.Orders)
{
    <li>
        Title: @order.Title <br>
        Description: @order.Description <br>
        Price: @order.Price <br>
        Date: @order.Date.ToString("yyyy-MM-dd")
    </li>
}
</ul>

<!-- Enhanced Add New Order button with Material Icon -->
<a href="/vendors/@Model.Id/orders/new" class="btn btn-success">
    <span class="material-icons">add_circle</span>
    Add New Order
</a>

<!-- Delete button -->
<form method="post" action="/vendors/delete/@Model.Id" onsubmit="return confirm('Are you sure you want to delete this vendor?');">
    <input type="submit" value="Delete Vendor" class="btn btn-danger" />
</form>